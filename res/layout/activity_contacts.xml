<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowActionBarOverlay="true"
    android:background="@drawable/wall3" >
    
     <ListView
         android:id="@+id/act_contacts_lv"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/trans_blue"
         android:divider="@drawable/horizontal_line"
         android:dividerHeight="2dp"
         android:paddingLeft="5dp" />

     <ProgressBar
         android:id="@+id/act_contacts_loader"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:background="@color/trans_white"
         android:indeterminate="true" />

     <TextView
         android:id="@+id/act_contacts_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_centerInParent="true"
         android:background="@color/trans_white"
         android:clickable="true"
         android:gravity="center"
         android:onClick="importVCF"
         android:padding="10dp"
         android:text="@string/contacts_no_agenda"
         android:textColor="@color/black"
         android:textStyle="bold"
         android:visibility="gone" />
	
</RelativeLayout>