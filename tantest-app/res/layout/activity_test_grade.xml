<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/act_test_grade_last"
    tools:context=".TestGradeActivity" >

    <TextView
        android:id="@+id/act_test_grade_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="@string/act_test_grade_text1"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/act_test_grade_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_test_grade_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center|center_horizontal"
        android:text="@string/act_test_grade_text5"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold" />

	<ScrollView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/act_test_grade_text2"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="30dp"
	    android:background="@drawable/rounded_corners"
	    android:paddingBottom="15dp"
	    android:scrollbarAlwaysDrawVerticalTrack="true"
	    android:scrollbars="none" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/act_test_grade_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/act_test_grade_text6"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/act_test_grade_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/act_test_grade_text7"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/act_test_grade_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/act_test_grade_text8"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/act_test_grade_text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/act_test_grade_text9"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/act_test_grade_text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/act_test_grade_text10"
                android:textColor="@color/white"
                android:textSize="14sp" />
            
            <TextView
                android:id="@+id/act_test_grade_text11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/act_test_grade_text25"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/act_test_grade_text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/act_test_grade_text11"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/act_test_grade_text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/act_test_grade_text12"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/act_test_grade_text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/act_test_grade_text13"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
    
	<ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/act_test_grade_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name" />
</RelativeLayout>