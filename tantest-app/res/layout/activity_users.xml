<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowActionBarOverlay="true"
    android:background="@drawable/wall3" >

     <ProgressBar
         android:id="@+id/act_contacts_loader"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:indeterminate="true" />

     <TextView
         android:id="@+id/act_contacts_text"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_centerInParent="true"
         android:background="@color/trans_white"
         android:clickable="true"
         android:gravity="center"
         android:onClick="importVCF"
         android:padding="10dp"
         android:text="@string/contacts_no_agenda"
         android:textColor="@color/black"
         android:textStyle="bold"
         android:visibility="gone" />

     <ImageView
         android:id="@+id/act_users_img_hand"
         android:layout_width="300dp"
         android:layout_height="250dp"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:src="@drawable/act_users_hand" />
	
</RelativeLayout>